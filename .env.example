# Configuración del Servidor
NODE_ENV=development
PORT=5000
CLIENT_URL=http://localhost:3000

# Base de Datos MongoDB - Solo MongoDB Atlas
MONGODB_URI=mongodb+srv://usuario:password@cluster0.xxxxx.mongodb.net/proserv?retryWrites=true&w=majority&appName=Cluster0
# Para MongoDB Atlas:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/proserv?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=tu_jwt_secret_muy_seguro_aqui
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=tu_refresh_secret_muy_seguro_aqui
JWT_REFRESH_EXPIRE=30d

# Redis Configuration (para caching)
REDIS_URL=redis://localhost:6379
# Para Redis Cloud:
# REDIS_URL=redis://username:password@host:port

# Cloudinary (para almacenamiento de imágenes)
CLOUDINARY_CLOUD_NAME=tu_cloud_name
CLOUDINARY_API_KEY=tu_api_key
CLOUDINARY_API_SECRET=tu_api_secret

# Stripe (para pagos)
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# PayPal (alternativa de pagos)
PAYPAL_CLIENT_ID=tu_paypal_client_id
PAYPAL_CLIENT_SECRET=tu_paypal_client_secret
PAYPAL_WEBHOOK_ID=tu_paypal_webhook_id
PAYPAL_MODE=sandbox

# MercadoPago (para Colombia)
MERCADOPAGO_ACCESS_TOKEN=tu_mercadopago_access_token
MERCADOPAGO_PUBLIC_KEY=tu_mercadopago_public_key
MERCADOPAGO_WEBHOOK_SECRET=tu_mercadopago_webhook_secret

# Wompi (proveedor colombiano)
WOMPI_PUBLIC_KEY=tu_wompi_public_key
WOMPI_PRIVATE_KEY=tu_wompi_private_key
WOMPI_BASE_URL=https://production.wompi.co/v1
WOMPI_WEBHOOK_SECRET=tu_wompi_webhook_secret

# Google Maps API
GOOGLE_MAPS_API_KEY=tu_google_maps_api_key

# Firebase (para notificaciones push)
FIREBASE_PROJECT_ID=tu_project_id
FIREBASE_PRIVATE_KEY_ID=tu_private_key_id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\ntu_private_key\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@tu-project.iam.gserviceaccount.com
FIREBASE_CLIENT_ID=tu_client_id
FIREBASE_AUTH_URI=https://accounts.google.com/o/oauth2/auth
FIREBASE_TOKEN_URI=https://oauth2.googleapis.com/token
FIREBASE_AUTH_PROVIDER_CERT_URL=https://www.googleapis.com/oauth2/v1/certs
FIREBASE_CLIENT_CERT_URL=https://www.googleapis.com/robot/v1/metadata/x509/firebase-adminsdk-xxxxx%40tu-project.iam.gserviceaccount.com

# Twilio (para SMS)
TWILIO_ACCOUNT_SID=tu_account_sid
TWILIO_AUTH_TOKEN=tu_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Nodemailer (para emails)
EMAIL_FROM=noreply@proserv.com
EMAIL_FROM_NAME=ProServ

# Gmail SMTP
GMAIL_USER=tu_email@gmail.com
GMAIL_PASS=tu_app_password

# O usar otro proveedor SMTP
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=tu_email@gmail.com
SMTP_PASS=tu_password

# AWS S3 (alternativa para almacenamiento)
AWS_ACCESS_KEY_ID=tu_access_key
AWS_SECRET_ACCESS_KEY=tu_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=proserv-uploads

# Sentry (para monitoreo de errores)
SENTRY_DSN=https://tu_sentry_dsn@sentry.io/proyecto

# Configuración de la aplicación
APP_NAME=ProServ
APP_URL=http://localhost:3000
API_URL=http://localhost:5000

# Configuración de comisiones (porcentajes)
COMMISSION_RATE=0.05
PLATFORM_FEE_BASIC=0.05
PLATFORM_FEE_PREMIUM=0.03
PLATFORM_FEE_ENTERPRISE=0.02

# Configuración de impuestos Colombia
COLOMBIA_IVA_RATE=0.19
COLOMBIA_RETENTION_RATE=0.04

# Configuración de geolocalización
DEFAULT_COUNTRY=Colombia
DEFAULT_COUNTRY_CODE=CO
DEFAULT_CURRENCY=COP
DEFAULT_TIMEZONE=America/Bogota
DEFAULT_LOCALE=es-CO
DEFAULT_REGION=co
DEFAULT_SERVICE_RADIUS=25
MAX_SERVICE_RADIUS=100

# Configuración de rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Configuración de logs
LOG_LEVEL=info
LOG_FILE=logs/app.log

# OAuth Providers (opcional)
GOOGLE_CLIENT_ID=tu_google_client_id
GOOGLE_CLIENT_SECRET=tu_google_client_secret

FACEBOOK_APP_ID=tu_facebook_app_id
FACEBOOK_APP_SECRET=tu_facebook_app_secret

# Configuración de desarrollo
SEED_DATABASE=false
ENABLE_SWAGGER=true
ENABLE_CORS=true

# Configuración de testing
# TEST_DATABASE_URI se usa la misma base de datos de Atlas para testing
# TEST_DATABASE_URI=mongodb+srv://usuario:password@cluster0.xxxxx.mongodb.net/proserv_test?retryWrites=true&w=majority&appName=Cluster0
TEST_JWT_SECRET=test_jwt_secret